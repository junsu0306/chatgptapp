<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/hud_bg"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/command_success_icon"
        app:srcCompat = "@drawable/ic_command_success"
        />
    <TextView
        android:id="@+id/success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Command Resolve Fragment"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/hud_text"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/command_success_icon" />
    <TextView
        android:id="@+id/command_response_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Command Resolve Description Loremasdasdasdaskdjaksjdkajsdkjasdkjasdaljksdlajsdflaskdlaksd ipsum"
        android:textSize="14sp"
        android:textColor="@color/hud_text"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/success_message" />

    <TextView
        android:id="@+id/text_response_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/hud_text"
        tools:text="Command Resolve Description Loremasdasdasdaskdjaksjdkajsdkjasdkjasdaljksdlajsdflaskdlaksd ipsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/command_response_description"
        />

</androidx.constraintlayout.widget.ConstraintLayout>