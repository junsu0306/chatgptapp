<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

  <style name="phrase_title">
        <item name="android:layout_width">match_parent</item>
<!--        <item name="android:layout_marginBottom">8dp</item>-->
<!--        <item name="android:paddingLeft">8dp</item>-->
        <item name="android:layout_marginRight">4dp</item>
          <item name="android:layout_marginLeft">4dp</item>
      <!--        <item name="android:background">@color/colorPhraseBackground</item>-->
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>


    <style name="text_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="reference_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="reference_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="reference_summary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>


    <!-- bottom bar for facial recognition naming autocomplete -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">400dp</item>
    </style>

</resources>
